{
  "manifest_version": 2,
  "name": "ThinkStraight",
  "version": "1.3",
  "description": "A bias-aware writing assistant",
  "icons": {
    "256": "assets/logo256.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "l.quartararo@wustl.edu"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "tailwind.css"
  ]
}